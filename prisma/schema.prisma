// learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model User {
  id       String @id @default(uuid())
  name     String
  email    String @unique
  password String

  @@map("users")
}

model Card {
  id           String @id @default(uuid())
  title        String
  pontuation   Int
  authorId     String
  authorName   String
  assignedId   String
  assignedName String
  description  String
  groupId      String
  groupName    String

  @@map("cards")
}

model Group {
  id      String @id @default(uuid())
  name    String @unique
  ownerId String

  @@map("groups")
}
